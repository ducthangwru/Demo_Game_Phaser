{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false, // Disable for interface
    /* Additional Checks */
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "Node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
